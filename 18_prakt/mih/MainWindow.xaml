<Window x:Class="mih.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mih"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <Label Content="Server log:" DockPanel.Dock="Top"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button Content="Start server" Click="Start_Serv" Name="startServ"/>
            <Button Content="Stop server" Click="Stop_Serv" IsEnabled="False" Name="stopServ"/>
        </StackPanel>
        <ListBox Name="log">

        </ListBox>
    </DockPanel>
</Window>
